<?xml version='1.0' encoding='utf-8'?>
<widget id="com.organizese.organizese" version="1.0.0"
  xmlns="http://www.w3.org/ns/widgets"
  xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Organizese</name>
  <description>"Organize seus gastos e tenha o controle do seu dinheiro."</description>

  <author email="roberto.rosa7@gmail.com" href="https://github.com/RobertoRosa7">Roberto Rosa</author>
  <content src="index.html" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>
</widget>
