<?xml version='1.0' encoding='utf-8'?>
<widget id="com.organizese.app" version="1.0.0"
  xmlns="http://www.w3.org/ns/widgets"
  xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Organizese</name>
  <description>"Organize seus gastos e tenha o controle do seu dinheiro."</description>

  <author email="roberto.rosa7@gmail.com" href="https://github.com/RobertoRosa7">Roberto Rosa</author>
  <content src="index.html" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <allow-intent href="market:*" />
    <icon src="www/assets/logo-organizese-512x512.png" platform="android" width="147" height="147" density="mdpi"/>     
    <!-- <icon src="res/android/ldpi.png" density="ldpi" /> -->
    <!-- <icon src="res/android/mdpi.png" density="mdpi" /> -->
    <!-- <icon src="res/android/hdpi.png" density="hdpi" /> -->
    <!-- <icon src="res/android/xhdpi.png" density="xhdpi" /> -->
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>
</widget>
